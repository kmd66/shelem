{
  "name": "shelem-client",
  "private": true,
  "version": "1.1.0",
  "author": "morteza",
  "type": "module",
  "scripts": {
    "dev": "vite --port 5054",
    "build": "vite build && npm run copy-assets",
    "build-js-only": "vite build --config vite-js-only.config.js",
    "copy-assets": "cp -r img/ dist/img/ && cp -r sound/ dist/sound/ && cp index.html dist/ && cp css/ dist/css/",
    "preview": "vite preview",
    "watch": "vite build --watch --minify false"
  },
  "devDependencies": {
    "vite": "^7.1.7"
  },
  "dependencies": {
    "@microsoft/signalr": "^9.0.6",
    "@microsoft/signalr-protocol-msgpack": "^9.0.6",
    "deck-of-cards": "^0.1.8",
    "gsap": "^3.13.0"
  }
}
